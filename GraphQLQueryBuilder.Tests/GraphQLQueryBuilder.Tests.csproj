<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>

    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FluentAssertions" Version="5.10.3" />
    <PackageReference Include="Moq" Version="4.14.1" />
    <PackageReference Include="nunit" Version="3.10.1" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.10.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.2.0" />
    <PackageReference Include="Snapshooter.Json" Version="0.5.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../GraphQLQueryBuilder/GraphQLQueryBuilder.csproj" />
  </ItemGroup>

  <ItemGroup>
    <SnapshotFiles Include="$(ProjectDir)__snapshots__\**\*.snap" />
  </ItemGroup>

  <Target Name="RemoveSnapshotsFolder" AfterTargets="BeforeBuild">
    <RemoveDir Directories="$(OutDir)__snapshots__" />
    <Copy SourceFiles="@(SnapshotFiles)" DestinationFolder="$(OutDir)__snapshots__" />
  </Target>

</Project>
