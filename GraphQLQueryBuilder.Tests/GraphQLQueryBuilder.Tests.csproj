<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.0</TargetFramework>
        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="FluentAssertions" Version="5.10.3" />
        <PackageReference Include="Moq" Version="4.14.1" />
        <PackageReference Include="nunit" Version="3.10.1" />
        <PackageReference Include="NUnit3TestAdapter" Version="3.10.0" />
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.2.0" />
        <PackageReference Include="Snapshooter.Json" Version="0.5.1" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../GraphQLQueryBuilder/GraphQLQueryBuilder.csproj" />
    </ItemGroup>

    <ItemGroup>
        <SnapshotsFolder Include="$(ProjectDir)__snapshots__\**\*.snap" />
        <SnapshotsOutputFolder Include="\\?\$(ProjectDir)$(OutDir)__snapshots__" Condition="'$(OS)' == 'Windows_NT'" />
        <SnapshotsOutputFolder Include="$(ProjectDir)$(OutDir)__snapshots__" Condition="'$(OS)' != 'Windows_NT'" />
        <None Include="@(SnapshotsFolder)">
            <CopyToOutputDirectory>Never</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <Target Name="RemoveSnapshotsFolder">
        <Message Text="Removing snapshots folder" Importance="high" />
        <RemoveDir Directories="@(SnapshotsOutputFolder)" />
    </Target>

    <Target Name="CopySnapshotsFolder">
        <Message Text="Copying snapshots folder" Importance="high" />
        <Copy SourceFiles="@(SnapshotsFolder)" DestinationFolder="@(SnapshotsOutputFolder)" />
    </Target>

    <Target Name="BuildDeps" BeforeTargets="BeforeBuild" DependsOnTargets="RemoveSnapshotsFolder;CopySnapshotsFolder">
    </Target>

    <Target Name="CleanDeps" BeforeTargets="BeforeClean" DependsOnTargets="RemoveSnapshotsFolder">
    </Target>

    <PropertyGroup>
        <BeforeBuild>
            BuildDeps;
            $(BeforeBuild)
        </BeforeBuild>
        <BeforeClean>
            CleanDeps;
            $(BeforeClean)
        </BeforeClean>
    </PropertyGroup>

</Project>
